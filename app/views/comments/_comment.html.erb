<li id="comment-<%= comment.id %>">
	<%= image_tag comment.user.avatar.url if comment.user.avatar? %>
	<span class="user"><%= link_to comment.user.username, comment.user %></span>
	<span class="content">
		<%= comment.body %>
		<%= image_tag comment.picture.url if comment.picture? %>
	</span>
	<span class="timestamp">
		Posted <%= time_ago_in_words(comment.created_at) %> ago.
		<% if current_user?(comment.user) %>
			<%= link_to "delete", comment, method: :delete, data: { confirm: "You sure?" } %>
		<% end %>
	</span>
</li>