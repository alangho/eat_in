<% provide(:title, @table.title) %>

<%= image_tag @user.avatar.url if @user.avatar? %>
<h4><%= @user.username %></h4>

<%= @table.title %><br />
<%= @table.cuisine %><br />

<% if @table.user == current_user %>
	<%= link_to "Clean up table", @table, method: :delete, data: { confirm: "You sure?" }, 
			class: 'btn btn-danger' %>
<% else %>
	<%= link_to "Leave table", tables_path, class: 'btn btn-primary' %> 
<% end %>

<%= render 'messages/form' %>
  <div class="panel panel-default" id="table_<%= @table.id %>_messages">
    <div class="panel-body">
      <ul class="media-list">
        <%= render @table.messages %>
      </ul>
    </div>
  </div>

  <%= subscribe_to table_path(@table) %>