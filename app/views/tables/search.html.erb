<% provide(:title, 'Search for a table') %>
<h1>Search for a table</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@table) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :cuisine %>
      <%= f.text_field :cuisine, class: 'form-control' %>

      <%= f.label :region %>
      <%= f.text_field :region, class: 'form-control' %>

      <%= f.label :dining_type %>
      <%= f.text_field :dining_type, class: 'form-control' %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>