$(document).on('scroll', function() {

	if ($(window).scrollTop() > 100 ) {
	    $('#top-link-block').removeClass('hidden').affix({
	        // how far to scroll down before link "slides" into view
	        offset: {top:500}
	    });
	}});

$('#table-list').append('<%= j render @tables %>');
<% if @tables.next_page %>
	$('.pagination').replaceWith('<%= j will_paginate @tables %>');
<% else %>
	$(window).off('scroll');
	$('.pagination').remove();
<% end %>